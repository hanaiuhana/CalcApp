<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonSize">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">40dp</item>
<!--        <item name="android:textColor">@color/color_blue</item>-->
    </style>
    <style name="TextSetting">
        <item name="android:layout_width">244dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
